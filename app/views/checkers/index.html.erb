<h1 class="mt-4">Fact checkers</h1>
<hr>
<% @checkers.each do |c| %>
  <a href="<%= checker_path(c) %>" class="text-dark" style="text-decoration: none;">
    <div class="card mb-3">
      <div class="card-body">
        <h4 class="card-title"><%= c.name %></h4>
        <p class="card-text"><%= c.description %></p>
        <span class="btn btn-<%= score_color(c.score) %> btn-lg text-light"><%= c.score %></span>
      </div>
    </div>
  </a>
<% end %>
